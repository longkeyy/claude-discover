# Content Discovery Plugin - Environment Configuration
# Copy this file to your project root as .env and fill in your values

# ============================================
# Publishing Channels
# ============================================

# Hexo Blog (Optional)
# Path to your Hexo blog directory
HEXO_PATH=/path/to/your/hexo-blog

# Telegram (Optional)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Channel ID can be:
# - Channel username: @your_channel
# - Numeric ID: -1001234567890 (for private channels)
TELEGRAM_CHANNEL_ID=@your_channel

# Discord (Optional)
# Create webhook in Discord channel settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/abcdefghijklmnopqrstuvwxyz

# ============================================
# MCP Configuration (Optional)
# ============================================

# If you're using custom MCP servers, configure them here
# Most users can skip this section - the plugin will auto-detect available MCP servers

# Example: HuggingFace MCP Server
# HF_MCP_SERVER_URL=http://localhost:8080

# ============================================
# Content Quality Settings
# ============================================

# Minimum quality score (0-100)
# Content below this score will be skipped
MINIMUM_QUALITY_SCORE=75

# Minimum content length in characters
# Applies to generated summaries
MINIMUM_CONTENT_LENGTH=1000

# ============================================
# Performance Settings
# ============================================

# Maximum parallel tasks
# Default: 3 (recommended for most systems)
MAX_PARALLEL_TASKS=3

# Image download timeout (seconds)
IMAGE_DOWNLOAD_TIMEOUT=30

# Maximum image file size (MB)
MAX_IMAGE_SIZE_MB=5

# ============================================
# Advanced Settings
# ============================================

# Enable debug logging
DEBUG=false

# Session cleanup (days)
# Delete session files older than this
SESSION_CLEANUP_DAYS=7

# Archive cleanup (days)
# Delete archived content older than this
ARCHIVE_CLEANUP_DAYS=30
